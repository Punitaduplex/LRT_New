<style>
    :target {
        border: 2px solid black;
        background-color: #e5eecc;
    }

    #myDIV {
        width: 100%;
        /* margin: 50px; */
        display: block;
        padding: 20px;
        height: 88px;
        border: 1px solid #a6b4bc;
        animation: mymove 5s infinite;
        /* box-shadow: 0px 0px 7px 9px #e3e9ed; */
    }


    @@keyframes mymove {
        80% {
            border: 2px solid lightblue;
        }
    }

    .page-header h1 {
        padding: 0;
        margin: 0 8px;
        font-size: 24px;
        font-weight: lighter;
        color: #2679B5;
        text-align: left;
    }

    a:link {
        color: #438eb9;
    }
    /* visited link */
    a:visited {
        color: #438eb9;
    }

    /* mouse over link */
    a:hover {
        color: yellow;
    }

    /* selected link */
    #myDIV .active {
        color: #fff !important;
        background: #438eb9;
        text-decoration: none;
    }

    #myDIV a i {
        font-size: 20px;
        padding-left: 9px;
    }

    #myDIV a {
        font-size: 18px;
        /*padding: 3px 5px;*/
        border-radius: 5px;
        /* font-weight: 600; */
        display: inline-block;
        float: left;
        line-height: 16px;
        vertical-align: top;
    }

    .dropdown {
        display: inline;
        border: groove;
        font-size: 20px;
        PADDING: 5px;
        MARGIN: 20px 10px 30px 10px;
    }

    .left_c a:hover {
        color: #0e0ef9 !important;
    }
</style>
<script>
    $(document).ready(function () {
        $('a').click(function () {
            $('a').removeClass("active");
            $(this).addClass("active");
            var project = ($(this)).text();
            if (($(this)).text() == "Edit Project") {
                window.location.replace("/Engineering/EditProject");
            }
            if (project == "Add Project") {
                window.location.replace("/Engineering/ProjectMaster");
            }

            if (project == "Search Project") {
               // alert(($(this)).text());
                window.location.replace("/Engineering/ProjectSearch");

            }
        });
        Getdata();
    });
</script>
<script>
    function Getdata() {
        $("#EmpInfo > tbody").html("");
        //Call EmpDetails jsonResult Method
        // alert();
        $.getJSON("/Engineering/ProjectCount",
            function (json) {
                var tr;

                //Append each row to html table
                for (var i = 0; i < json.length; i++) {
                    tr = $('<tr/>');
                    tr.append("<td style='text-align:center'>" + (i + 1) + "</td>");
                    tr.append("<td class='left_c'><a href='javascript:void(0);' class='ProjectBy'>" + json[i].Project_By + "</a></td>");
                    tr.append("<td class='left_c'>" + json[i].Project_Count + "</td>");


                    $('table').append(tr);

                }
                $('#EmpInfo').DataTable();
            });

    }
</script>

<script>
    $(document).on("click", "a.ProjectBy", function () {
        var $row = $(this).closest("tr");    // Find the row
        var $name = $row.find('td:eq(1)').text();
        sessionStorage.setItem("projectBy", $name);
        window.location.replace("/Engineering/ProjectList");
    });
</script>
